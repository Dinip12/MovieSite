@{
    ViewBag.Title = "Contact Us";
    Layout = "/Views/Shared/_Layout.cshtml";
}
<html lang="zxx" dir="ltr">
<body>
    <div class="main-wrapper">       
        <!-- Contact Area Start -->
        <div class="contact-area">
            <div class="container">
                <div class="contact-wrapper">
                    <div class="row">
                        <div class="col-12">
                            <div class="contact-form">
                                <div class="contact-title mb-30">
                                    <h2 class="title" style="color:white">Изпрати запитване</h2>
                                </div>
                                <form class="contact-form-style" action="/Home/Contact" method="post">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <input name="name" placeholder="Име*" type="text" />
                                        </div>
                                        <div class="col-lg-6">
                                            <input name="from" placeholder="Email*" type="email" />
                                        </div>
                                        <div class="col-lg-12">
                                            <input name="subject" placeholder="Тема*" type="text" />
                                        </div>
                                        <div class="col-lg-12 text-center">
                                            <textarea name="body" placeholder="Твоето запитване*"></textarea>
                                            <button class="btn btn-primary" type="submit" >Изпрати</button>
                                        </div>
                                    </div>
                                </form>
                                <p class="form-messege"></p>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="contact-info">
                                <div class="single-contact" >
                                    <div class="icon-box">
                                        <img src="assets/images/icons/contact-1.png" alt="">
                                    </div>
                                    <div class="info-box">
                                        <h5 class="title" style="color:white">Адрес</h5>
                                        <p style ="color:white">
                                            бул. „Пещерско шосе“ 26, 4002 ж.к. Младежки хълм, Пловдив
                                        </p>
                                    </div>
                                </div>
                                <div class="single-contact" >
                                    <div class="icon-box">
                                        <img src="assets/images/icons/contact-2.png" alt="">
                                    </div>
                                    <div class="info-box" >
                                        <h5 class="title" style="color:white">Телефон</h5>
                                        <p><a href="tel:359884714960">+359 88 4714 960</a></p>
                                        
                                    </div>
                                </div>
                                <div class="single-contact m-0" >
                                    <div class="icon-box">
                                        <img src="assets/images/icons/contact-3.png" alt="">
                                    </div>
                                    <div class="info-box">
                                        <h5 class="title" style="color:white">Email</h5>
                                        <p><a href="MovieSiteBG@outlook.com">MovieSiteBG@outlook.com</a></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Contact Area End -->
        <!-- map Area Start -->
        <div class="contact-map">
            <div id="mapid">
                <div class="mapouter">
                    <div class="gmap_canvas">
