@using MovieSite.Data.Enums;
@model MovieSite.ViewModel.MovieVM.EditVM

@{
    ViewData["Title"] = "UpdateMovie";
}
<div style="margin-left:40%">
    <h1 style="color:white">UpdateMovie</h1>

    <h4 style="color:white">EditVM</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="UpdateMovie">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <hidden>
                    <div class="form-group" style="color:white">
                        <label asp-for="ID" class="control-label"></label>
                        <input asp-for="ID" class="form-control" />
                        <span asp-validation-for="ID" class="text-danger"></span>
                    </div>
                </hidden>
                <div class="form-group" style="color:white">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group" style="color:white">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group" style="color:white">
                    <label asp-for="MovieCategory" class="control-label"></label>
                    <select asp-for="MovieCategory" class="form-control" asp-items="Html.GetEnumSelectList<MovieCategory>()"></select>
                    <span asp-validation-for="MovieCategory" class="text-danger"></span>
                </div>
                <div class="form-group" style="color:white">
                    <label asp-for="TrailerURL" class="control-label"></label>
                    <input asp-for="TrailerURL" class="form-control" />
                    <span asp-validation-for="TrailerURL" class="text-danger"></span>
                </div>
                <div class="form-group" style="color:white">
                    <label asp-for="Actors" class="control-label"></label>
                    <input asp-for="Actors" class="form-control" />
                    <span asp-validation-for="Actors" class="text-danger"></span>
                </div>
                <div class="form-group" style="color:white">
                    <label asp-for="ReleaseYear" class="control-label"></label>
                    <input asp-for="ReleaseYear" class="form-control" />
                    <span asp-validation-for="ReleaseYear" class="text-danger"></span>
                </div>
                <div class="form-group" style="color:white">
                    <label asp-for="Studio" class="control-label"></label>
                    <input asp-for="Studio" class="form-control" />
                    <span asp-validation-for="Studio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div style="color:white">
        <a href="/Movie/MovieAdmin">Върни се назад</a>
    </div>
</div>
