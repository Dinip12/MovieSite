@{
    ViewBag.Title = "SHARED PROJECTS";
    Layout = "/Views/Shared/_Layout.cshtml";
}
@model MovieSite.ViewModel.UserVM.RegisterVM
<!DOCTYPE html>
<html lang="zxx">

<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>



    <!-- Normal Breadcrumb Begin -->
    <section class="normal-breadcrumb set-bg" data-setbg="img/normal-breadcrumb.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="normal__breadcrumb__text">
                        <h2>Регистрирай се</h2>

                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Normal Breadcrumb End -->
    <!-- Signup Section Begin -->
    <section class="signup spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="login__form">
                        <h3>Регистрирай се</h3>
                        <form action="/Users/SignUp" method="post">
                            <div class="input__item">
                                <input type="email" placeholder="Емайл" id="Email" name="Email">
                                <span class="icon_mail"></span>
                            </div>
                            <div class="input__item">
                                <input type="text" placeholder="Потребителско име" id="Username" name="Username">
                                <span class="icon_profile"></span>
                            </div>
                            <div class="input__item">
                                <input type="password" placeholder="Парола" id="Password" name="Password">
                                <span class="icon_lock"></span>
                            </div>
                            <button type="submit" class="site-btn">Регистрирай се Сега</button>
                        </form>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="login__register">
                        <h3>Вече Имате Профил?</h3>
                        <a href="/users/login" class="primary-btn">Влез В Профила Си</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Signup Section End -->


</body>

</html>