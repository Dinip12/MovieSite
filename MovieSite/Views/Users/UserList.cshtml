@using MovieSite.Repository
@using MovieSite.Service
@using MovieSite.Entity
@model MovieSite.ViewModel.UserVM.IndexVM
@{
    ViewBag.Title = "USER LIST";
    Layout = "/Views/Shared/_Layout.cshtml";
}
<div class="grid">

        
            <form action="/Users/UserList" method="get">
                    <div class = "row" style = "margin-left:250px">
                        <div class = "col-4">
                            @Html.LabelFor(x=>x.Filter.Username)
                        </div>
                        <div class = "col-4">
                            @Html.LabelFor(x=>x.Filter.Email)
                        </div>
                        
                        <div class = "col-2">
                        </div>
                    </div>
                    <div class = "row" style = "margin-left:250px">
                        <div class = "col-4">
                            @Html.TextBoxFor(x=>x.Filter.Username)
                        </div>
                        <div class = "col-4">
                            @Html.TextBoxFor(x=>x.Filter.Email)
                        </div>
                       
                        <div class = "col-2">
                            <input type = "submit" value = "Filter"/>
                            <a href = "/Users/UserList">Clear</a>
                        </div>
                    </div>
            </form>
        





        <div class = "row" style = "margin-left:250px">
            <div class = "col-3">
                <a class = "left"href="/Users/Create">NEW</a>
            </div>
        </div>

    <div class = "row" style = "margin-left:250px">

        <div class="col-1 textColor">
            Username
        </div>

        <div class="col-1 textColor">
            Email
        </div>

       

        <div class="col-1 textColor">
            Admin
        </div>

        <div class="col-1 textColor">
            Actions
        </div>
        <div class="col-2">
        </div>
    </div>
@foreach (var item in Model.Items) {
    <div class = "row" style = "margin-left:250px">
            <div class = "col-1">
                @item.username
            </div>

            <div class = "col-1">
                @item.email
            </div>

            

            <div class = "col-1">
                @item.IsAdmin
            </div>

            <div class = "col-2">
                @Html.ActionLink("Edit ", "UpdateUser", new { id=item.Id })|
                @Html.ActionLink("Delete", "DeleteUser", new { id=item.Id }, new{onclick ="return confirm('Do you realy want to delete')"})
            </div>
    </div>
}
    <div style = "margin-left:250px">
            @{
                Html.RenderPartial("/Views/Shared/PagerPartial.cshtml", Model.Pager);
            }
    </div>
        
    </div>